        <Button x:Name="button" Content="Berechnen" HorizontalAlignment="Left" Margin="611,318,0,0" VerticalAlignment="Top" Width="151" RenderTransformOrigin="1.165,-0.135" Height="40" Click="Button_Click" FontSize="16"/>
        <TextBlock x:Name="textBlock4" HorizontalAlignment="Left" Margin="524,319,0,0" TextWrapping="Wrap" Text=")" VerticalAlignment="Top" FontSize="22"/>

